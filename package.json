{
  "name": "bmad-method",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace @bmad/web",
    "build": "npm run build --workspace @bmad/web",
    "lint": "npm run lint --workspace @bmad/web",
    "test:frontend:unit": "npm run test --workspace @bmad/web",
    "test:frontend:e2e": "npm run test:e2e --workspace @bmad/web",
    "prepare:frontend:e2e": "npm run playwright:install --workspace @bmad/web",
    "verify-fonts": "node scripts/verify-fonts.mjs",
    "dev:backend": "cd backend && uvicorn services.core.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:stack": "docker compose up --build"
  },
  "devDependencies": {
    "fontkit": "^2.0.4"
  }
}
